{
    "name": "filmscout-news-functions",
    "version": "1.0.0",
    "description": "Google Cloud Functions for FilmScout news service",
    "main": "index.js",
    "scripts": {
        "start": "functions-framework --target=getNews",
        "deploy:aggregate": "gcloud functions deploy aggregateNews --runtime nodejs20 --trigger-http --allow-unauthenticated",
        "deploy:enhanced": "gcloud functions deploy aggregateNewsWithImages --runtime nodejs20 --trigger-http --allow-unauthenticated --memory=1024MB --timeout=540s",
        "deploy:api": "gcloud functions deploy getNews --runtime nodejs20 --trigger-http --allow-unauthenticated",
        "deploy:refresh": "gcloud functions deploy refreshNews --runtime nodejs20 --trigger-http --allow-unauthenticated",
        "deploy:all": "npm run deploy:enhanced && npm run deploy:api && npm run deploy:refresh"
    },
    "dependencies": {
        "@google-cloud/firestore": "^7.1.0",
        "@google-cloud/functions-framework": "^3.3.0",
        "axios": "^1.6.0",
        "dotenv": "^17.2.0"
    },
    "engines": {
        "node": "20"
    }
}